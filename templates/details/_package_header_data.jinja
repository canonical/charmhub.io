{% macro package_header_data(package, developer_validation, image) %}
  <div class="">
    <div class="">
      <h1 style="margin-bottom: 0;">{{ package.store_front["display-name"] }}</h1>
      <div class="">
        <ul class="p-inline-list--middot">
          <li class="p-inline-list__item">
            {% if package.store_front.publisher_name != None %}
              {% if package.store_front.username != None %}
                <a href="/publisher/{{ package.store_front.username | safe }}">{{ package.store_front.publisher_name }}</a>
              {% else %}
                {{ package.store_front.publisher_name }}
              {% endif %}
            {% endif %}
            {% if package.type == "bundle" %}
              <span class="p-muted-heading u-no-padding" style="font-size: .9rem;">| bundle</span>
            {% endif %}
            {% if developer_validation == "verified" %}
              <span class="p-tooltip--top-center" aria-describedby="verified-tooltip">
                {# forcing format to "svg" to avoid scaling issues with Cloudinary #}
                {{ image(url="https://assets.ubuntu.com/v1/75654c90-rosette.svg",
                                alt="",
                                width="12",
                                height="12",
                                hi_def=True,
                                loading="auto",
                                fmt="svg") | safe
                }}
                <span class="p-tooltip__message" role="tooltip" id="verified-tooltip">Verified account</span>
              </span>
            {% endif %}
          </li>
          {% if package.store_front.categories %}
            <li class="p-inline-list__item">
              <a href="/?filter={{ package.store_front.categories[0].slug }}">{{
              package.store_front.categories[0].name }}</a>
            </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </div>
{% endmacro %}
