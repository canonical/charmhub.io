    "babel-jest": "29.7.0",
    "babel-plugin-prismjs": "2.1.0",
    "concurrently": "7.6.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-jest": "27.6.3",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.33.2",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "sass-loader": "13.3.3",
    "stylelint": "14.16.1",
