{
  "author": "Canonical Webteam",
  "license": "LGPL-3.0-or-later",
  "scripts": {
    "clean": "rm -rf node_modules yarn-error.log css static/css *.log *.sqlite _site/ build/ .jekyll-metadata .bundle",
    "watch": "watch -p 'static/sass/**/*' -p 'static/js/**/*.js' -p 'static/js/**/*.tsx' -c 'yarn run build'",
    "watch-js": "webpack --watch",
    "watch-scss": "watch -p 'static/sass/**/*.scss' -c 'yarn run build-css'",
    "build": "yarn run build-css && yarn run build-js",
    "build-css": "sass static/sass/styles.scss:static/css/styles.css static/sass/styles-embedded.scss:static/css/styles-embedded.css --load-path=node_modules --style=compressed && postcss --map false --use autoprefixer --replace 'static/css/**/*.css'",
    "build-js": "yarn run build-js-bundle && yarn run build-global-nav",
    "build-global-nav": "mkdir -p static/js/build/global-nav && cp node_modules/@canonical/global-nav/dist/global-nav.js static/js/build/global-nav",
    "build-js-bundle": "webpack",
    "format-python": "black --line-length 79 webapp",
    "lint-python": "flake8 --extend-ignore=E203 webapp tests && black --check --line-length 79 webapp tests",
    "lint-js": "eslint static/js/src/**/*.js",
    "lint-scss": "stylelint static/**/*.scss",
    "serve": "./entrypoint 0.0.0.0:${PORT}",
    "start": "yarn run build && concurrently --raw 'yarn run watch' 'yarn run serve'",
    "test": "yarn run lint-scss && yarn run lint-js && yarn run test-js && yarn run lint-python && yarn run test-python",
    "test-python": "python3 -m unittest discover tests",
    "test-js": "jest",
    "check-prettier": "prettier -c '**/*.js'"
  },
  "dependencies": {
    "@babel/core": "7.20.12",
    "@babel/plugin-transform-runtime": "7.19.6",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.18.6",
    "@canonical/cookie-policy": "3.4.0",
    "@canonical/global-nav": "3.2.1",
    "@canonical/react-components": "^0.37.6",
    "@types/react-dom": "^18.0.6",
    "@types/react-router-dom": "5.3.3",
    "autoprefixer": "9.8.8",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.3.0",
    "css-loader": "5.2.7",
    "d3": "6.7.0",
    "d3-array": "2.12.1",
    "d3-scale": "3.3.0",
    "d3-selection": "2.0.0",
    "d3-shape": "2.1.0",
    "d3-time-format": "3.0.0",
    "date-fns": "2.29.3",
    "deep-copy": "1.4.2",
    "deep-equal": "2.2.0",
    "expose-loader": "1.0.3",
    "highlight.js": "10.7.3",
    "postcss-cli": "7.1.2",
    "prettier": "2.8.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-dropzone": "^14.2.2",
    "react-markdown": "8.0.4",
    "react-router-dom": "6.6.2",
    "remark-mermaidjs": "4.1.1",
    "sass": "1.57.1",
    "style-loader": "2.0.0",
    "swiper": "6.8.4",
    "ts-loader": "9.4.2",
    "typescript": "4.9.4",
    "vanilla-framework": "3.9.0",
    "watch-cli": "0.2.3",
    "webpack": "5.75.0",
    "webpack-cli": "4.10.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.15",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.6.3",
    "concurrently": "5.3.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-jest": "24.7.0",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-react": "7.32.0",
    "jest": "26.6.3",
    "sass-loader": "10.4.1",
    "stylelint": "14.16.1",
    "stylelint-config-standard-scss": "3.0.0",
    "stylelint-order": "5.0.0"
  }
}
